{
  "name": "hammerpack",
  "version": "0.0.16",
  "description": "Hammerpack is an opinionated development, test, build, and deployment system for javascript projects.",
  "main": "dist/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/pythian/hammerpack"
  },
  "author": "Pythian and Atif Ali",
  "license": "MIT",
  "bin": {
    "hammerpack": "./dist/main.js"
  },
  "scripts": {
    "start": "npm run build && npm run watch-ts",
    "build": "npm run clean && npm run build-ts && npm run tslint && npm run copy-static-assets",
    "clean": "node clean.js",
    "build-publish": "npm run build && npm publish",
    "serve": "nodemon dist/main.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/main.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "files": [
    "dist"
  ],
  "typings": "dist/main.d.ts",
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "abstract-leveldown": "2.7.0",
    "anymatch": "^1.3.2",
    "async": "^2.5.0",
    "better-npm-run": "^0.1.0",
    "cache-loader": "^1.2.0",
    "chokidar": "^1.7.0",
    "closure-builder": "^2.2.27",
    "css-loader": "^0.28.7",
    "cuid": "^1.3.8",
    "dotenv": "^4.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "find-process": "^1.1.0",
    "happypack": "^4.0.0",
    "ignore-loader": "^0.1.2",
    "isomorphic-style-loader": "^4.0.0",
    "jest": "^22.4.0",
    "jest-junit": "^3.6.0",
    "js-yaml": "^3.10.0",
    "json-loader": "^0.5.7",
    "kafka-logger": "^7.0.0",
    "less": "^2.7.3",
    "less-loader": "^4.0.5",
    "levelup": "^2.0.0",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "nconf": "^0.8.5",
    "node-notifier": "^5.1.2",
    "node-sass": "^4.7.2",
    "ps-node": "^0.1.6",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^3.1.3",
    "redisdown": "^0.1.12",
    "rimraf": "~2.6.2",
    "rocksdb": "^1.1.0",
    "semver": "^5.5.0",
    "source-map-loader": "^0.2.3",
    "source-map-support": "^0.5.0",
    "speakingurl": "^14.0.1",
    "style-loader": "^0.19.0",
    "ts-jest": "^22.0.4",
    "tsickle": "^0.25.0",
    "tslib": "^1.9.3",
    "tslint": "^5.11.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "tslint-react": "^3.6.0",
    "tsutils": "~2.9.0",
    "typescript": "^3.0.3",
    "url-loader": "^0.6.2",
    "uuid": "^3.1.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.5",
    "webpack-fail-plugin": "^2.0.0",
    "winston": "^2.4.0",
    "winston-daily-rotate-file": "^1.7.2",
    "winston-logstash": "^0.3.0",
    "winston-logstash-udp": "^0.2.1",
    "yaml-loader": "^0.5.0",
    "yargs": "^9.0.1"
  },
  "devDependencies": {
    "@types/anymatch": "^1.3.0",
    "@types/async": "^2.0.44",
    "@types/chokidar": "^1.7.3",
    "@types/cuid": "^1.3.0",
    "@types/dotenv": "^4.0.2",
    "@types/jest": "^22.1.3",
    "@types/js-yaml": "^3.9.1",
    "@types/leveldown": "^1.7.0",
    "@types/levelup": "^0.0.30",
    "@types/lodash": "^4.14.77",
    "@types/mkdirp": "^0.5.1",
    "@types/nconf": "^0.0.34",
    "@types/node": "~6.0.88",
    "@types/node-notifier": "^0.0.28",
    "@types/speakingurl": "^13.0.2",
    "@types/webpack": "^3.8.1",
    "@types/webpack-dev-server": "^2.9.2",
    "@types/winston": "^2.3.7",
    "@types/yargs": "^8.0.2",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8"
  }
}
